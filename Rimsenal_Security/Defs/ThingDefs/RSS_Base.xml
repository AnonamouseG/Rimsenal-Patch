<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <!--=============== shard sentry ===============-->
  <ThingDef ParentName="BuildingBase">
    <defName>RSSS</defName>
    <label>shard sentry</label>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/IS</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <altitudeLayer>Waist</altitudeLayer>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToMake>3000</WorkToMake>
      <Beauty>-60</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li>
        <compClass>CompExplosive</compClass>
        <explosiveRadius>3.5</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
    </comps>
    <description>Sentry gun with a shard cannon. High fire rate and low fire power, completed in an instant. explodes when destroyed.</description>
    <size>(1,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.4</fillPercent>
    <costList>
      <RSISD>1</RSISD>
    </costList>
    <combatTargetBuilding>true</combatTargetBuilding>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>24</specialDisplayRadius>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_RSSS</turretGunDef>
      <turretBurstCooldownTicks>250</turretBurstCooldownTicks>
<turretTopgraphicPath>Things/Building/IS_Gun</turretTopgraphicPath>
    </building>
  </ThingDef>

  <!--=============== Automatic grenade launcher ===============-->
  <ThingDef ParentName="BuildingBase">
    <defName>RSGN</defName>
    <label>grenade nest</label>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/AGL</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,1)</drawSize>
    </graphicData>
    <uiIconPath>Things/Building/AGL_menuicon</uiIconPath>
    <altitudeLayer>Waist</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToMake>5500</WorkToMake>
      <Beauty>-65</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li>
        <compClass>CompExplosive</compClass>
        <explosiveRadius>4</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompMannable</compClass>
      </li>
     </comps>
    <description>Fixed gun nest with a mounted automatic grenade launcher. Greatly effective against massed enemies. Explode when destroyed.</description>
    <size>(3,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>150</Steel>
      <GDJaguar>1</GDJaguar>
    </costList>
    <combatTargetBuilding>true</combatTargetBuilding>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>30</specialDisplayRadius>
    <building>
      <turretGunDef>Gun_RSGN</turretGunDef>
      <turretBurstWarmupTicks>40</turretBurstWarmupTicks>
      <turretBurstCooldownTicks>55</turretBurstCooldownTicks>
      <turretTopgraphicPath>Things/Building/AGLGun</turretTopgraphicPath>
    </building>
    <staticSunShadowHeight>0.40</staticSunShadowHeight>
    <researchPrerequisite>HighPoweredMannable</researchPrerequisite>
  </ThingDef>

